{
  "name": "test-the-web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "(npm run ci:api) && (npm run ci:client)",
    "ci:api": "cd api && npm ci",
    "ci:client": "cd client && npm ci",
    "build": "(npm run build:api) && (npm run build:client)",
    "build:watch": "(cd client && npm run build:watch) & (cd api && npm run start:watch)",
    "build:api": "cd api && npm run build",
    "build:client": "cd client && npm run build"
  },
  "devDependencies": {
    "cspell": "7.3.8",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*": "prettier --cache --write --ignore-unknown"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  }
}
